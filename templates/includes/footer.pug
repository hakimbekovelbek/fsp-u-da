mixin footer-list(title, list)
  .col-12.col-sm-4
    h4.menu__title.mb-4= title
      ul
        each item in list    
          li
            a(href='#')= item
            
mixin logos(list)
  each item in list
    a.social-networks(href='#')
      img(src=item alt='')

mixin footer(theme)
  footer.footer.mt-5
    .footer__img
      .container
        .row.py-5
          +footer-list('Направление', ['Дизайн', 'Программирование', 'Маркетинг'])
          +footer-list('Дизайн', ['Графический дизайн', 'UI/UX дизайн', 'Motion дизайн'])
          +footer-list('Программирование', ['Frontend', 'Backend', 'AI'])
          +footer-list('Маркетинг', ['Digital Marketing', 'SMM Pro', 'Youtube', 'Targeting'])
        .row.py-4
          .col-2
            a(href='./index.html')
              img(src='../assets/icons/navbar-logo.svg' alt='Footer logo icon')
          .col-7
          .social-networks-box.col-2
            +logos(['../assets/icons/facebook.svg', '../assets/icons/instagram.svg', '../assets/icons/telegram.svg'])